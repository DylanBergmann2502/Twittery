<div id="tweet_stats">
    <div class="d-flex justify-content-start mb-4">
        <div class="me-4">
            <span class="fw-bold"><%= tweet_presenter.views_count %></span> Views
        </div>
        <div class="me-4">
            <span class="fw-bold"><%= tweet_presenter.replies_count %></span> Replies
        </div>
        <div class="me-4">
            <span class="fw-bold"><%= tweet_presenter.retweets_count %></span> Retweets
        </div>
        <div class="me-4">
            <span class="fw-bold"><%= tweet_presenter.likes_count %></span> Likes
        </div>
    </div>

    <div class="d-flex justify-content-evenly action-links">
        <div>
            <%= link_to '#', class: "text-decoration-none text-black views" do %>
                <%= image_tag "views.png", size:"24x24", class: "me-1" %>
            <% end %>
        </div>
        <div>
            <%# ??????? WTF tweet_path(@tweet_presenter.tweet) does not work %>
            <%= link_to '#', class: "text-decoration-none text-black replies" do %>
                <%= image_tag "conversations.png", size:"24x24", class: "me-1" %>
            <% end %>
        </div>
        <div>
            <%= link_to tweet_presenter.retweet_tweet_url(source: "tweet_show"),
                    data: {"turbo-method": tweet_presenter.retweet_turbo_data_method},
                    class: "text-decoration-none text-black retweets" do %>
                <%= image_tag tweet_presenter.retweet_image, size:"24x24", class: "me-1" %>
            <% end %>
        </div>
        <div>
            <%= link_to tweet_presenter.like_tweet_url(source: "tweet_show"),
                    data: {"turbo-method": tweet_presenter.like_turbo_data_method},
                    class: "text-decoration-none text-black likes" do %>
                <%= image_tag tweet_presenter.like_image, size:"24x24", class: "me-1" %>
            <% end %>
        </div>
        <div>
            <%= link_to tweet_presenter.bookmark_tweet_url(source: "tweet_show"),
                    data: {"turbo-method": tweet_presenter.bookmark_turbo_data_method},
                    class: "text-decoration-none text-black bookmarks" do %>
                <%= image_tag tweet_presenter.bookmark_image, size:"24x24", class: "me-1" %>
            <% end %>
        </div>
    </div>
</div>
