<%= form_with model: Tweet.new,
              url: tweets_path,
              method: :post,
              class: "w-100",
              data: { controller: "tweet-form", action: "turbo:submit-end->tweet-form#reset" } do |f| %>
  <%= f.text_area :body, placeholder: "What's happening?", class: "form-control w-100 tweet-input mb-4" %>
  <div class="d-flex justify-content-end">
    <%= f.submit "Tweet", class: "btn btn-twitter btn-lg rounded-pill" %>
  </div>
<% end %>
