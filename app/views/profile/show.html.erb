<div class="col-6">
  <div class="mb-3">
    <div class="mb-5">
        <%= link_to :back, class: "fs-4 text-decoration-none text-black fw-semibold" do %>
            <%= image_tag 'back-arrow.png', size: 28, class: "me-4" %>
            <span style="position: relative; top: 2px"><%= current_user.username %></span>
            <span class="text-muted fs-6" style="position: relative; top: 2px">
              <%= current_user.tweets.size %> Tweets
            </span>
        <% end %>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <% if current_user.avatar.present? %>
                <%= image_tag current_user.avatar, class: "rounded-circle", size: 150 %>
            <% else %>
                <%= image_tag "user.png", class: "rounded-circle", size: 150 %>
            <% end %>
        </div>
        <div><%= button_tag 'Edit Profile',
                 class: "btn btn-twitter-outline rounded-pill",
                 data: {"bs-toggle": "modal", "bs-target": "#profile-edit-modal"} %></div>
    </div>

    <%= render "profile_section", user: current_user %>

  </div>

</div>
<div class="col">
  One of three columns
</div>

<!-- Edit Profile Modal -->
<div class="modal" id="profile-edit-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header border-bottom-0">
        <button type="button" class="close-modal-btn btn-close m-0" data-bs-dismiss="modal" aria-label="Close" id="close-modal-btn"></button>
      </div>
      <div class="modal-body">
        <%= form_with model: current_user, url: profile_path, method: :put, data: { controller: "tweet-form", action: "turbo:submit-end->tweet-form#reset" }, class: "row g-3" do |f| %>
          <div class="col-md-12">
              <%= f.label :username, class: "form-label" %>
              <%= f.text_field :username, class: "form-control" %>
          </div>
          <div class="col-md-12">
              <%= f.label :display_name, class: "form-label" %>
              <%= f.text_field :display_name, class: "form-control" %>
          </div>
          <div class="col-md-12">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control" %>
          </div>
          <div class="col-md-12">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class: "form-control" %>
          </div>
          <div class="col-md-12">
              <%= f.label :bio, class: "form-label" %>
              <%= f.text_area :bio, class: "form-control" %>
          </div>
          <div class="col-md-12">
              <%= f.label :location, class: "form-label" %>
              <%= f.text_field :location, class: "form-control" %>
          </div>
          <div class="col-md-12">
              <%= f.label :profile_url, "URL", class: "form-label" %>
              <%= f.text_field :profile_url, class: "form-control" %>
          </div>
          <div class="col-12">
              <%= f.submit "Update Profile", class: "btn btn-twitter rounded-pill" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
