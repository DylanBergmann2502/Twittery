<div class="col-6">
  <div class="mb-3">
    <%= link_to 'Home', dashboard_path, class: "fs-4 text-decoration-none text-black fw-semibold" %>
  </div>
    <div class="mb-4">
      <%= render "shared/tweet_form", form_submit_path: tweets_path, button_label: "Tweet" %>
    </div>

    <% if false %> <%# this is commented out %>
      <% Tweet.order(created_at: :desc).each do |tweet| %>
        <%= render "tweets/tweet", tweet: tweet %>
      <% end %>
    <% end %>

    <%# this is called render collection %>
    <div
      id="tweets"
      data-controller="dashboard-tweets"
      data-next-page="<%= @tweet_activities_data[:next_page] %>"
      data-last-page="<%= @tweet_activities_data[:last_page] %>"
    >
      <%= render partial: "tweets/tweet",
                 collection: @tweet_activities_data[:tweet_activities],
                 as: :tweet_presenter %>
    </div>

</div>
<div class="col">
  <%= render partial: "shared/hashtag_sidebar" %>
</div>




